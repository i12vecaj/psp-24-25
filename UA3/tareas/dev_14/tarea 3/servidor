
import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.OutputStreamWriter;
import java.io.PrintWriter;
import java.net.ServerSocket;
import java.net.Socket;

public class ServidorTCP {
    public static void main(String[] args) {
        int puertoServidor = 12345;

        try (ServerSocket servidor = new ServerSocket(puertoServidor)) {
            System.out.println("Servidor iniciado ");

            for (int i = 1; i <= 2; i++) {
                System.out.println("Esperando cliente " + i);
                Socket cliente = servidor.accept();
                System.out.println("Cliente " + i + " conectado.");

                try (BufferedReader entrada = new BufferedReader(new InputStreamReader(cliente.getInputStream()));
                     PrintWriter salida = new PrintWriter(new OutputStreamWriter(cliente.getOutputStream()), true)) {


                    String mensaje = entrada.readLine();
                    System.out.println("Mensaje recibido del cliente: " + mensaje);


                    String respuesta = mensaje.toUpperCase();
                    salida.println(respuesta);
                    System.out.println("Mensaje enviado al cliente: " + respuesta);
                    String respuesta2 = "mensaje de prueba";
                    salida.println(respuesta2);
                }

                cliente.close();
            }
        } catch (IOException e) {
            System.out.println("Error en el servidor: " + e.getMessage());
        }
    }
}
